<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_number_picker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/select_period_hint"
        android:padding="@dimen/dialog_title_padding"
        android:focusable="true"
        android:nextFocusDown="@id/tv_dialog_support"/>

    <NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="true"
        android:nextFocusDown="@id/btn_numberPicker_apply"/>

    <Button
        android:id="@+id/btn_numberPicker_apply"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/apply"
        style="?android:attr/buttonBarButtonStyle"
        android:textSize="@dimen/dialog_btn_text_size"
        android:padding="@dimen/dialog_btn_padding"
        android:layout_gravity="end"
        android:focusable="true"
        android:nextFocusUp="@id/number_picker" />

</LinearLayout>